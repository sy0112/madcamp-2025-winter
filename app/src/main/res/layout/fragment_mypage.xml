<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDD4D6"
    android:paddingHorizontal="24dp">

    <!-- 상단 헤더: 다른 화면과 통일된 한 줄 제목 -->
    <TextView
        android:id="@+id/tvMyPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="My Profile"
        android:textSize="28sp"
        android:fontFamily="sans-serif-black"
        android:textColor="#2D2D2D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 사용자 정보 섹션 (카드 스타일) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvMyPageTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 프로필 이미지 자리 (원형 배경) -->
            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="#EEE7E9"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#DDD4D6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 프로필 관리"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D2D2D"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 메뉴 리스트 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/cvUserInfo">

        <!-- 내 프로젝트 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMyProjects"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@android:color/white"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:text="내가 등록한 프로젝트 보기"
            android:textColor="#2D2D2D"
            android:textSize="15sp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconTint="#2D2D2D"
            app:iconPadding="16dp" />

        <!-- 하트 누른 프로젝트 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLikedProjects"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/white"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:text="관심 프로젝트 목록"
            android:textColor="#2D2D2D"
            android:textSize="15sp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/btn_star_big_on"
            app:iconTint="#2D2D2D"
            app:iconPadding="16dp" />

        <!-- 로그아웃 버튼 (외곽선 스타일로 차별화) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="로그아웃"
            android:textColor="#FF5252"
            app:strokeColor="#FF5252"
            app:cornerRadius="12dp"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>